 <div class="pull-right"><%= link_to 'New Item', new_item_path %></div>

<h1>Items</h1>


<% @items.each do |item| %>
  <ul class="row span2">
    <li>
    <div><strong><%=link_to item.name, item %></strong></div>
    <div><%= item.story %></div>
    <div>$<%= item.price %></div>
    <div><%=link_to item.category.name, category_url(item.category_id) %></div>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </ul>
<% end %>





